<%-include('header')-%>
    <div class="box" id="heading">
        <h1>
            <%=kindOfDay%>
        </h1>
    </div>
    <div class="box">
            <% for (let i=0;i<list.length; i++) { %>
                <form action=<%="/delete/" + submit + "/" +list[i]._id%> method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()">
                   <p><%= list[i].name %></p>   
                </div>
                </form>
                <% } %>
               
    <%if (submit === "todo") {%>   
    <form action="/" method="post" class='new'>
        <% }  else {%>
            <form action=<%="/"+submit%> method="post" class='new'>
            <% } %>
        <input type="text" name="text" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value=<%= submit %>>+</button>
    </form>
    </div>
    
<%-include('footer')-%>
    

</html>